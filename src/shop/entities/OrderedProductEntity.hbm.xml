<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="shop.entities.OrderedProductEntity" table="ordered_product" schema="sakila">
        <composite-id mapped="true" class="shop.entities.OrderedProductEntityPK">
            <key-property name="customerOrderId" column="customer_order_id"/>
            <key-property name="filmFilmId" column="film_film_id"/>
        </composite-id>
        <property name="quantity" column="quantity"/>
        <many-to-one name="customerOrderByCustomerOrderId" class="shop.entities.CustomerOrderEntity">
            <column name="customer_order_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>