<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="shop.entities.CustomerEntity" table="customer" schema="sakila">
        <id name="id" column="customer_id"></id>
        <property name="firstName" column="first_name"/>
        <property name="storeId" column="store_id"></property>
        <property name="addressId" column="address_id"></property>
        <property name="lastName" column="last_name"/>
        <property name="email" column="email"/>
        <property name="active" column="active"/>
        <property name="createDate" column="create_date"/>
        <property name="lastUpdate" column="last_update"/>
        <set name="customerOrdersByCustomerId" inverse="true">
            <key>
                <column name="customer_id"/>
            </key>
            <one-to-many not-found="ignore" class="shop.entities.CustomerOrderEntity"/>
        </set>
    </class>
</hibernate-mapping>